<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recyclerViewItemHeight"
    android:background="@drawable/selector_item_press">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/recyclerViewItemImg"
        android:layout_height="@dimen/recyclerViewItemImg"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/recyclerViewItemMargin"
        android:layout_marginEnd="@dimen/recyclerViewItemMargin"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_icon"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/fileNameTextSize" />

    <TextView
        android:id="@+id/tv_last_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/recyclerViewItemMargin"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dateTextSize"
        tools:ignore="RelativeOverlap" />
</RelativeLayout>